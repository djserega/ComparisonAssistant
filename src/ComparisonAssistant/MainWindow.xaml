<Window x:Class="ComparisonAssistant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComparisonAssistant"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">

            <Separator Height="1" Background="{x:Null}"/>

            <StackPanel Orientation="Horizontal">

                <StackPanel Orientation="Horizontal">
                    <Label Content="Автор"/>
                    <ComboBox MinWidth="150"/>
                </StackPanel>

                <Separator Width="1" Background="{x:Null}"/>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Задача"/>
                    <ComboBox MinWidth="150"/>
                </StackPanel>

                <Separator Width="1" Background="{x:Null}"/>

                <StackPanel Orientation="Horizontal">
                    <Button x:Name="ButtonUpdateInfo" Content="Обновить данные" Click="ButtonUpdateInfo_Click"/>
                </StackPanel>
                
            </StackPanel>
            
            <Separator Height="1" Background="{x:Null}"/>
            
            <StackPanel Orientation="Vertical">
                <Label Content="Таблица изменений"/>
                <DataGrid>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Статус"/>
                        <DataGridTextColumn Header="Измененный объект"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
            
            <Separator Height="1" Background="{x:Null}"/>
            
        </StackPanel>
    </Grid>
</Window>
